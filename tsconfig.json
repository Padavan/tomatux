{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "module": "es6",
    "target": "es6",
    "types": ["node"],
    "lib": [
      "dom",
      "es2017"
    ],
    "sourceMap": true,
    "jsx": "react",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "paths": {
      "src/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "config"
  ]
}
